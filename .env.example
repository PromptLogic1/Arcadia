# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from your Supabase project dashboard: Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service Role Key (Server-side only, keep private!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for your application
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application environment
NEXT_PUBLIC_APP_ENV=development

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Token for API revalidation
REVALIDATE_TOKEN=your-secure-token-here

# JWT secret for custom auth (if used)
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Control feature availability
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_BINGO_BOARDS=true
NEXT_PUBLIC_ENABLE_COMMUNITY=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# Vercel Analytics (optional)
# NEXT_PUBLIC_VERCEL_ANALYTICS=false